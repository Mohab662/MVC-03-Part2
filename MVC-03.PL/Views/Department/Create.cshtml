@using MVC_03.DAL.Models
@model Department
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department</h1>
<br />
<br />
<form asp-action="Create">
    <div>
        <label class="col-form-label" asp-for="Code">Code</label>
        <input type="text" asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div>
        <label class="col-form-label" asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label class="col-form-label" asp-for="DateOfCreation">Date Of Creation</label>
        <input asp-for="DateOfCreation" class="form-control" />
    </div>
    <input type="submit" value="Create" class="btn btn-primary mt-5" />
    <a asp-action="Index" class="mt-5 btn btn-light">Back To List</a>
</form>
@section ValidateSection
{
    <partial name="_validationscriptspartial"></partial>
}
