@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignIn">
			<input class="text w3lpass" asp-for="Email" placeholder="Email" required="">
			<input class="text w3lpass" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SignIn">
		</form>
		<p>Forget Password ? <a asp-action="ForgetPassword"> Change It Now!</a></p>
		<p>Don't have an Account? <a asp-action="SignUp"> Register Now!</a></p>
	</div>
</div>
@section ValidateSection
{
	<partial name="_validationscriptspartial"></partial>
}
