
@using MVC_03.DAL.Models;
@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}
<div class="row justify-content-center mt-5">
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8">
            <input type="text" name="searchInput" class="form-control" placeholder="Search By Name" />
        </div>
        <div>
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>
<h1>All Employees</h1>
<br />
<br />
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create Now</a>

@if(Model.Count()>0)
{
   <table class="table table-hover table-striped">
       <thead>
           <tr>
               <th>@Html.DisplayNameFor(D=>D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.Age)</th>
                <th>@Html.DisplayNameFor(D => D.Address)</th>
                <th>@Html.DisplayNameFor(D => D.Department)</th>
                <th>@Html.DisplayNameFor(D => D.Salary)</th>
                <th>@Html.DisplayNameFor(D => D.IsActive)</th>
                <th>@Html.DisplayNameFor(D => D.Gender)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
           </tr>
       </thead>
       <tbody>
           @foreach(var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Address</td>
                    <td>@employee.Department?.Name</td>
                    <td>@employee.Salary</td>
                    <td>@employee.IsActive</td>
                    <td>@employee.Gender</td>
                    <td>@employee.Email</td>
                    <partial name="_ButtonsPartial" model="@employee.Id.ToString()"></partial>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Is No Employee</h3>
    </div>
}


