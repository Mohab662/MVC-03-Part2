
@model EmployeeViewModel
@* @inject IDepartmentRepository DepartmentRepository *@
@inject IUnitOfWork unitOfWork
@{
    var departments = new SelectList(unitOfWork.DepartmentRepository.GetAll()/* ViewData["Departments"] as IEnumerable<Department> */, nameof(Department.Id), nameof(Department.Name));
}
<div>
    <label class="col-form-label" asp-for="Name">Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div>
    <label class="col-form-label" asp-for="Address">Address</label>
    <input type="text" asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div>
    <label class="col-form-label" asp-for="Salary">Salary</label>
    <input asp-for="Salary" class="form-control" />
</div>
<div>
    <label class="col-form-label" asp-for="Email">Email</label>
    <input type="email" asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div>
    <label class="col-form-label" asp-for="Age">Age</label>
    <input type="text" asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div>
    <label class="col-form-label" asp-for="IsActive">Is Active?</label>
    <input asp-for="IsActive" class="form-control" />
    <span asp-validation-for="IsActive" class="text-danger"></span>
</div>
<div>
    <label class="col-form-label" asp-for="PhoneNumber">Phone Number</label>
    <input type="text" asp-for="PhoneNumber" class="form-control" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>
<div>
    <label class="col-form-label" asp-for="HireDate">Hire Date</label>
    <input asp-for="HireDate" class="form-control" />
</div>
<div>
    <label class="col-form-label" asp-for="Gender">Gender</label>
    <input asp-for="Gender" class="form-control" />
    <span asp-validation-for="Gender" class="text-danger"></span>
</div>
<div class="form-control">
    <label class="col-form-label" asp-for="Department"></label>
    <select class="form-control" asp-items="@departments" asp-for="DepartmentId">
        <option value="null">--Select Department--</option>
    </select>
</div>

<div>
    <label class="col-form-label" asp-for="Image"></label>
    <input class="form-control-file"  asp-for="Image"/>
</div>